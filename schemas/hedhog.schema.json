                    "^\\w+$": {
                      "type": "string"
                    }
                  }
                },
                "slug": {
                  "type": "string"
                },
                "relations": {
                  "patternProperties": {
                    "^\\w+$": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "patternProperties": {
                          "^\\w+$": {
                            "anyOf": [
